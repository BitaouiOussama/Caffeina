@model Caffeina.Models.Utilisateur

@{
    ViewData["Title"] = "Inscription";
    Layout = "_layoutadmine";
}


<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Créer un compte</h1>
                        </div>
                        <form class="user" asp-action="Create" method="post">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Nom" class="form-control form-control-user" placeholder="Nom complet" />
                                    <span asp-validation-for="Nom" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Email" class="form-control form-control-user" placeholder="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="MotDePasse" class="form-control form-control-user" placeholder="Mot de passe" />
                                <span asp-validation-for="MotDePasse" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Créer" data-mdb-input-init class="btn btn-admin btn-user btn-block" />
                            </div>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" asp-action="#">Vous avez déjà un compte? Se connecter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

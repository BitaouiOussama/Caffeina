@model Caffeina.Models.Utilisateur
@{
    ViewData["Title"] = "Se connecter";
    Layout = "_layoutadmine";
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <form class="user" asp-controller="Utilisateur" asp-action="Login" method="post">
                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control form-control-user" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" asp-for="MotDePasse" class="form-control form-control-user" placeholder="Mot de passe" />
                                        <span asp-validation-for="MotDePasse" class="text-danger"></span>
                                    </div>
                                    
                                    <input type="submit" value="se connecter" data-mdb-input-init class="btn btn-admin btn-user btn-block"/>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-controller="Utilisateur" asp-action="Create">Créer un compte</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>


